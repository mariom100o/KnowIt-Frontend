{
    "manifest_version": 3,
    "name": "KnowIt",
    "description": "A Chrome extension that that validates the reliability of the information on the page.",
    "version": "1.0",
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "icons": {
        "16": "Assets/KnowIt16.png",
        "32": "Assets/KnowIt32.png",
        "48": "Assets/KnowIt48.png",
        "128": "Assets/KnowIt128.png"
    },
    "action": {
        "default_popup": "popup.html"
    }
}